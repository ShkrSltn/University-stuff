<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
     <link href="~/css/style.css" rel="stylesheet" type="text/css">
     <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Koulen&display=swap" rel="stylesheet">
</head>

<header >
    <center><h1>Biblio.com</h1></center>
</header>
<body onload="Form_Load()">
    <div class="login-page" id="Authorization">
        <div class="form">

        <form class=".login-form" action="Login/Authorization">
      <input type="text" name = "login" placeholder="login"/>
      <input type="password" name="password" placeholder="password"/>
      <button  type="submit">Войти</button>
    </form>
        <button onclick="Registration()">Регистрация</button>
    </div>

    </div>
    <div class="form" id="Registration">
        <form action="Login/Registration">
                    <input type="text" placeholder="Имя" name="first_name" />
                    <input type="text" placeholder="Фамилия" name="second_name" />
                    <input type="text" placeholder="Отчество" name="patronymic" />
                    <input type="tel" placeholder="Номер телефона" name="telNo" />
                    <input type="password" placeholder="пароль" name="password" />
                    <button type="submit">Зарегистрировать</button>
        </form>
        <button onclick="Authorization()">Авторизация</button>
    </div>

    @if (@ViewBag.Message.str_message != "")
    {
        @if (@ViewBag.Message.error == true)
        {
            <div id="Message" onclick="Close_Message()">
                <h3>"Ошибка: " @ViewBag.Message.str_message</h3>
            </div>
        }
        else
        {
            <div id="Message" onclick="Close_Message()">
                <h3>@ViewBag.Message.str_message</h3>
            </div>
        }
    }

    <script>
        let Authorization_div;
        let Registration_div;

        function Form_Load() {
            Authorization_div = document.getElementById("Authorization");
            Registration_div = document.getElementById("Registration");

            document.getElementById("Registration").remove();
        }

        function Registration() {
            document.getElementById("Authorization").remove();

            document.body.appendChild(Registration_div);
        }

        function Authorization() {
            document.getElementById("Registration").remove();

            document.body.appendChild(Authorization_div);
        }

        function Close_Message() {
            document.getElementById("Message").remove();
        }
    </script>
</body>

</html>